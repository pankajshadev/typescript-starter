{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",                            
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                           
    "skipLibCheck": true                               
  },
  "include": [  
    "src/**/*.ts"  
  ],  
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
